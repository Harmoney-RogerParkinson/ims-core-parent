<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration scan="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{35} - %F:%L %msg%n</pattern>
		</encoder>
	</appender>
	<!-- 
   <appender name="FILE" class="ch.qos.logback.core.FileAppender">
      <file>/tmp/harmoney.log </file>
      <append>true</append>
      <encoder>
         <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
      </encoder>
   </appender>
    -->
	<logger name="com.harmoney.ims.core.queuehandler.unpacker.Unpacker" level="debug"/>
	<logger name="com.harmoney.ims.core.database.descriptors.ObjectDescriptor" level="debug"/>
	<logger name="com.salesforce.emp.connector" level="debug" />
	<logger name="com.harmoney.ims.core.messages" level="debug" />
	<logger name="com.harmoney.ims" level="warn" />
	<logger name="com.harmoney.ims.core.server.test.ServerIT" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
<!-- 		<appender-ref ref="FILE" /> -->
	</logger>
	<logger name="com.harmoney.ims.core.messages.MessageHandlerImpl" level="debug" additivity="false">
		<appender-ref ref="STDOUT" />
<!-- 		<appender-ref ref="FILE" /> -->
	</logger>
	<root level="warn">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>

