<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration scan="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{35} - %F:%L %msg%n</pattern>
		</encoder>
	</appender>
	<!-- 
	<logger name="com.harmoney.ims.core.soapmessages" level="debug"/>
	<logger name="com.harmoney.ims.core.soapmessages.QueryEngine" level="debug"/>
	<logger name="com.salesforce.emp.connector" level="debug" />-->
	 
	<logger name="com.harmoney.ims.core.messages.MessageHandlerImpl" level="debug" />
	<logger name="com.harmoney.ims" level="info" />
	<root level="warn">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>

