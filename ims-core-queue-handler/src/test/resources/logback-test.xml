	<logger name="org.hibernate.SQL" level="debug" />
	<logger name="org.hibernate.type" level="trace" /> -->
	
	<logger name="com.harmoney.ims.core.balanceforward" level="debug"/>
	<logger name="com.harmoney.ims.core.database.AbstractDAO" level="debug" />
	<logger name="com.harmoney.ims.core.database.InvestorLoanTransactionDAO" level="debug" />
	<logger name="com.harmoney.ims" level="info" />
	<root level="warn">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>

